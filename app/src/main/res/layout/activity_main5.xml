<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    tools:context=".MainActivity5">

    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="AC"
        android:layout_margin="1dp"
        android:textSize="20dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:layout_margin="1dp"
        android:textSize="20dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="%"
        android:layout_margin="1dp"
        android:textSize="20dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:layout_margin="1dp"
        android:textSize="20dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="X"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:layout_margin="1dp"
        />

    <Button
        android:layout_height="80dp"
        android:layout_margin="1dp"
        android:width="80dp"
        android:text="-"
        android:textSize="20dp" />

    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:layout_margin="1dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:layout_margin="1dp"
        />

    <Button
        android:layout_height="80dp"
        android:layout_margin="1dp"
        android:width="80dp"
        android:text="+"
        android:textSize="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_columnSpan="2"
        android:layout_margin="1dp"
        android:width="80dp"
        android:text="0" />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:layout_margin="1dp"
        android:textSize="20dp"
        />
    <Button
        android:width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:layout_margin="1dp"
        android:textSize="20dp"
        />

</GridLayout>